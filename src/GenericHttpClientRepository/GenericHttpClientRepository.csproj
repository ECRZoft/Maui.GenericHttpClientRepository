<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
    <Title>GenericHttpClientRepository</Title>
    <Company>ECRZoft</Company>
    <PackageTags>maui;repository</PackageTags>
    <Description>A generic HttpClient repository for MAUI with Polly integration.</Description>
    <Copyright>MIT</Copyright>
    <Version>0.9.2-alpha</Version>
    <PackageProjectUrl>https://github.com/ECRZoft/Maui.GenericHttpClientRepository</PackageProjectUrl>
    <RepositoryUrl>https://github.com/ECRZoft/Maui.GenericHttpClientRepository</RepositoryUrl>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="7.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="7.0.0" />
    <PackageReference Include="Polly" Version="7.2.3" />
  </ItemGroup>

</Project>
